{
  "name": "assemblyscript-template",
  "version": "0.1.0",
  "description": "A modern AssemblyScript project template with CI/CD",
  "type": "module",
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug --exportRuntime --sourceMap --debug --outFile build/debug.wasm --bindings esm",
    "asbuild:release": "asc assembly/index.ts --target release --exportRuntime --optimize --outFile build/release.wasm --bindings esm",
    "asbuild": "bun run asbuild:debug && bun run asbuild:release",
    "asbuild:watch": "asc assembly/index.ts --target debug --exportRuntime --sourceMap --watch --outFile build/debug.wasm --bindings esm",
    "test": "node --test tests/**/*.test.js",
    "test:coverage": "bun test --coverage",
    "test:wasm": "node tests/run-wasm.test.js",
    "lint": "eslint \"assembly/**/*.ts\" \"tests/**/*.js\"",
    "lint:fix": "eslint \"assembly/**/*.ts\" \"tests/**/*.js\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "clean": "rm -rf build dist coverage",
    "prepublishOnly": "bun run clean && bun run asbuild:release"
  },
  "keywords": [
    "assemblyscript",
    "webassembly",
    "wasm",
    "template"
  ],
  "license": "MIT",
  "author": {
    "name": "wsafight"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wsafight/assemblyscript-template.git"
  },
  "bugs": {
    "url": "https://github.com/wsafight/assemblyscript-template/issues"
  },
  "homepage": "https://github.com/wsafight/assemblyscript-template#readme",
  "exports": {
    ".": {
      "types": "./assembly/index.d.ts",
      "import": "./build/release.js",
      "require": "./build/release.js"
    },
    "./wasm": {
      "types": "./assembly/index.d.ts",
      "import": "./build/release.wasm",
      "require": "./build/release.wasm"
    }
  },
  "files": [
    "build/",
    "assembly/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@assemblyscript/loader": "0.28.9",
    "@types/node": "25.0.3",
    "assemblyscript": "0.28.9",
    "eslint": "9.39.2",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "typescript-eslint": "8.50.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
